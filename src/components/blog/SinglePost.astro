---
import { Icon } from 'astro-icon/components';
import Image from '~/components/common/Image.astro';

import { getPermalink } from '~/utils/permalinks';
import { getFormattedDate } from '~/utils/utils';

import type { Post } from '~/types';

export interface Props {
  post: Post;
  url: string | URL;
}

const { post } = Astro.props;

// Fix für die Kategorie (damit kein [object Object] erscheint)
const categoryTitle = typeof post.category === 'object' ? post.category?.title : post.category;
const categorySlug = typeof post.category === 'object' ? post.category?.slug : String(post.category || '').toLowerCase().replace(/\s+/g, '-');
---

<section class="py-8 sm:py-16 lg:py-20 mx-auto">
  <article>
    <header>
      <div class="flex justify-between flex-col sm:flex-row max-w-3xl mx-auto mt-0 mb-6 px-4 sm:px-6 sm:items-center">
        <p class="text-sm dark:text-slate-400">
          <Icon name="tabler:clock" class="w-4 h-4 inline-block -mt-0.5" />
          <time datetime={String(post.publishDate)}>{getFormattedDate(post.publishDate)}</time>
          {post.author && (
            <> · <Icon name="tabler:user" class="w-4 h-4 inline-block -mt-0.5" /> <span>{post.author}</span></>
          )}
          {categoryTitle && (
            <> · <a class="hover:underline text-blue-600 dark:text-blue-400 font-medium uppercase tracking-tight" href={getPermalink(categorySlug, 'category')}>{categoryTitle}</a></>
          )}
        </p>
      </div>

      <h1 class="px-4 sm:px-6 max-w-3xl mx-auto text-4xl md:text-6xl font-extrabold leading-tighter tracking-tighter mb-8 dark:text-white">
        {post.title}
      </h1>
      
      <p class="max-w-3xl mx-auto mb-12 px-4 sm:px-6 text-xl md:text-2xl text-slate-600 dark:text-slate-400 leading-relaxed font-medium">
        {post.excerpt}
      </p>

      <div class="max-w-full lg:max-w-[900px] mx-auto mb-16 px-4 sm:px-6">
        {post.image ? (
          <Image
            src={post.image}
            class="w-full h-auto rounded-[2.5rem] shadow-2xl shadow-blue-500/10 bg-gray-400 dark:bg-slate-700 overflow-hidden"
            widths={[400, 900]}
            sizes="(max-width: 900px) 400px, 900px"
            alt={post.title}
            width={900}
            height={506}
            loading="eager"
            decoding="async"
          />
        ) : (
          <div class="max-w-3xl mx-auto border-t dark:border-slate-700" />
        )}
      </div>
    </header>

    <div class="mx-auto px-6 max-w-3xl prose prose-lg lg:prose-xl dark:prose-invert prose-headings:font-bold prose-headings:tracking-tighter prose-a:text-blue-600 dark:prose-a:text-blue-400 prose-img:rounded-[2rem] mt-8 leading-relaxed font-medium text-slate-700 dark:text-slate-300">
      <slot />
    </div>

  </article>
</section>